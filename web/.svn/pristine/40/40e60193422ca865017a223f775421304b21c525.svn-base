.lianxi{
    width: 100%;
    height: 1200px;
    background:#f2ecec;
    cursor:pointer
}
.lx{
    width: 1200px;
    height: 330px;
    margin: 0 auto;
}
.left{
    width: 300px;
    height: 700px;
    float: left;
}
.cptx{
    width: 300px;
    height: 90px;
    text-align: center;
    line-height:90px;
    background: #00a885;
    color: #f7f3f3;
    position: relative;
    top:30px;
    font-size: 20px;
}
.cptx img{
    position: absolute;
    top:25px;
    left: 50px;
    width: 40px;
    height: 40px;
}
.lx1{
    width: 300px;
    height: 220px;
    margin-top: 30px;
    background: #fff;
}
.lx1 p{
    width: 300px;height: 30px;
    line-height: 40px;
    margin-top: 5px;
    padding-left: 10px;
    color:#666666;
    font-size: 15px;
}
.lx2{
    width: 300px;
    height: 290px;
    margin-top: 30px;
    background: #fff;
}
.lx2 p{
    width: 300px;height: 30px;
    line-height: 40px;
    margin-top: 5px;
    padding-left: 10px;
    color:#666666;
    font-size: 15px;
}
.lx2 p a{
    color:#666666;
    font-size: 15px;
}
.lx2 p a:hover{
    color: #00a885;
}
.right{
    width: 880px;
    height: 700px;
    float: right;
}
.yindao{
    width: 850px;
    height: 60px;
    line-height: 60px;
    background: #ffffff;
    margin: 30px auto 0;
}
.yindao p{
    color: #4c4c4c;
    margin-left: 20px;
}
.yindao p a{
    color: #4c4c4c;
}
.con{
    width: 850px;
    height:1050px;
    margin:0 auto 0;
    background: #ffffff;
}
.con1{
    width: 850px;
    height: 330px;
}
.con1-1{
    width:380px;
    height: 330px;
    float: left;
    margin-left:20px;
}
.con1-1-1{
    width: 380px;
    height:260px;
}
.con1-1-1 img{
    width: 100%;
    height: 100%;
}
.js{
    width: 380px;
    height: 70px;
    text-align: center;
    line-height: 50px;
    color: #000;

}
.con1-1-1 img:hover{
    opacity: 0.7;
}
.con1-2{
    width:380px;
    height: 330px;
    float: right;
    margin-right:20px;
}
