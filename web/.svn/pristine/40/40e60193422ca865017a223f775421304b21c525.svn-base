/*-------------------------------------------*/

@media screen and (max-width:750px){
    .lianxi{
        width: 100%;
        height: 1100px;
        background:#f2ecec;
        cursor:pointer
    }
    .lx{
        width: 100%;
        height: 330px;
        margin: 0 auto;
    }
    .left{
      display: none;
    }
    .right{
        width: 100%;
        height: 700px;
    }
    .yindao{
        width: 100%;
        height: 60px;
        line-height: 60px;
        background: #ffffff;
        margin: 30px auto 0;
    }
    .yindao p{
        color: #4c4c4c;
        margin-left: 20px;
    }
    .yindao p a{
        color: #4c4c4c;
    }
    .con{
        width: 100%;
        height:1000px;
        margin:0 auto 0;
        background: #ffffff;
    }
    .con1{
        width: 100%;
        height: 300px;
    }
    .con1-1{
        width:40%;
        height: 330px;
        float: left;
        margin-left:20px;
    }
    .con1-1-1{
        width: 100%;
        height:180px;
    }
    .con1-1-1 img{
        width: 100%;
        height: 180px;
    }
    .js{
        width: 100%;
        height: 70px;
        text-align: center;
        line-height: 50px;
        color: #000;

    }
    .con1-1-1 img:hover{
        opacity: 0.7;
    }
    .con1-2{
        width:40%;
        height: 330px;
        float: right;
        margin-right:20px;
    }
}






















