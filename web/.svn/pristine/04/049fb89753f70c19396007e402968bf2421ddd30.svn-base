 .result{
    display:none;
    padding-top:.54rem
}

.show-result .container{
    display:none
}
.show-result .result{
    display:block
}
.show-result .ico-ok{
    height:2.42rem;
    background:url(../img/icon_ok.png) center no-repeat;background-size:2.43rem auto
}
.layer-btn{
    font-size:.16rem;
}
.poplayer{
    display: none;
    position: fixed;
    left: 0;top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 99;
}
.poplayer .popmain{
    position:relative;
    width: 21rem;
    padding: 0 1.6rem;
    background: #fff;
    border-radius: 3px;
}
.poplayer .poplayer-close{
    right: -16px;
    top: -16px;
}
.poplayer .popdesc{
    font-size: 1.1rem;
    line-height: 2.8rem;
}
.poplayer.show{
    display:-webkit-box;
    -webkit-box-orient:horizontal;
    -webkit-box-pack:center;
    -webkit-box-align:center;
}


.poplayer-bindaccount .popmain{
    padding: 14rem 1.7rem 2.3rem;
}
.poplayer-bindaccount.show .popmain{
    background: #fff url("../img/poplayer_bindaccount.png") no-repeat;
    background-size: 100% auto;
}
.layer{
    display:none;
    position:fixed;
    top:0;left:0;
    width:100%;
    height:100%;
    background-color:rgba(0,0,0,0.4);
    z-index:99;
}
.layer-main{
    position:absolute;
    left:50%;top:50%;
    width:2.7rem;
    -webkit-transform:translate(-50%, -50%) translateZ(0);
    transform:translate(-50%, -50%) translateZ(0);
    background-color:#fff;
    text-align:center;
    border-radius:.04rem;
    font-size:.16rem;
}
.layer-line{
    line-height:.3rem;
    padding:.2rem 0;
}
.layer-btn{
    display:block;
    height:.44rem;
    line-height:.44rem;
    border-top:1px solid #e1e1e1;
    color:#54A3F5;
}
.poplayer-close{
    position:absolute;
    right:-6px;top:-6px;
    width:32px;height:32px;
    background:url(../img/ico_close.png) center no-repeat;
    background-size:20px;
}
.layer.show{
    display:block;
}
